# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

categories          font
name                sawarabi-mincho
version             20191215
description         Mincho Japanese font
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             CC-BY-3

homepage            https://sawarabi-fonts.osdn.jp/
# Note: The numerical suffix here changes with each version!
master_sites        osdn:sawarabi-fonts/72039

distname            ${name}-otf-$version

use_configure       no
use_zip             yes

checksums           rmd160  5a424234815663b2ed898c2ab4d3e28da78603d4 \
                    sha256  59c107dcf5088bde7e46374625ce4e1576c36d9791f007fe968b216374bdff18 \
                    size    2087738

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.otf] ${target}
}

livecheck.type      regex
livecheck.url       https://osdn.net/projects/sawarabi-fonts/releases/rss
livecheck.regex     ${name}-otf-(\[0-9\]+)${extract.suffix}
