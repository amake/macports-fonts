PortSystem          1.0

categories          font
name                Anzumoji
version             1.00
description         Handwriting-like font for Japanese
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             free

homepage            http://www8.plala.or.jp/p_dolce/
master_sites        http://www8.plala.or.jp/p_dolce/font/

distname            ap1

worksrcdir          あんずもじ

use_configure       no

checksums           rmd160  002456430c7022e793b3d7e5ef985639fe5c9028 \
                    sha256  5523e42b23dbd447a1232ec026bf7781dcb06a83f40746498ff8c669972ac242 \
                    size    3275980

depends_extract     port:unar

extract.cmd         unar
extract.suffix      .zip
extract.pre_args
extract.post_args

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}

livecheck.type      none
