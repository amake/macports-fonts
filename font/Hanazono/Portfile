PortSystem          1.0

categories          font
name                hanazono
version             20170904
description         Free Kanji font including over 80,000 Unicode characters
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

homepage            http://fonts.jp/hanazono/
master_sites        osdn:hanazono-font/68253

worksrcdir          .

use_configure       no
use_zip             yes

checksums           rmd160  7211da13b8d832258d389678165f53d3de0039d0 \
                    sha256  571cd4a09ae7da0c642d640fc2442c050aa450ebb0587a95cdd097d41a9c9572 \
                    size    30546996

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}

livecheck.type      regex
livecheck.url       https://osdn.net/projects/hanazono-font/releases/rss
livecheck.regex     ${name}-\(\[0-9\]+\)${extract.suffix}
