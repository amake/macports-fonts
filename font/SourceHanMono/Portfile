PortSystem          1.0
PortGroup           github 1.0

categories          font
name                SourceHanMono
github.setup        adobe-fonts source-han-mono 1.001

description         A set of Pan-CJK monospaced fonts
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

github.master_sites ${github.homepage}/releases/download/${github.version}
distfiles           ${name}.ttc
dist_subdir         ${name}/${version}

use_configure       no

checksums           rmd160  20cb47e3125f97f8a7bf3bee9a32351c5cd604dd \
                    sha256  b20f78b0c2c22a456db9e21fa311c01c2417b12687cd5ce6dadd131ebfefc4e6 \
                    size    122115320

extract.only

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}
