distname            [string tolower ${github.project}]-ttc-${github.version}
use_configure       no
use_7z              yes
worksrcdir          .

checksums           rmd160  4b848687fe847fb786542c674367e63dd94afc82 \
                    sha256  73d02e2c0becd0ffa9a294c176cb36f949b1beece9c76cf428a9a207c02c6627 \
                    size    113848193

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
