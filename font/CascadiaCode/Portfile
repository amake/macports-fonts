PortSystem          1.0
PortGroup           github 1.0

categories          font
github.setup        microsoft cascadia-code 2005.15 v
name                CascadiaCode
revision            0
github.tarball_from releases

description         A fun, new monospaced font that includes programming ligatures
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

distname            ${name}_${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  49ac6b36f2c2c1159610200d0df5d1a8bcfecdb9 \
                    sha256  b3d8495e9cdee90d0dbaf60b7db018413e130265dc27e2be7a8db04cf98fddce \
                    size    1003060

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/otf/*] ${target}
}
