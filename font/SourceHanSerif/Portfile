# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          font
name                SourceHanSerif
github.setup        adobe-fonts source-han-serif 1.001 "" R

description         Monospaced font for mixed Latin and Japanese
long_description    A UI font for mixed Latin and Japanese text on \
                    displays, for programming, editing HTML/CSS, \
                    viewing text or input command line in a terminal \
                    app, etc.
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

github.master_sites ${github.homepage}/releases/download/${github.version}${github.tag_suffix}
distfiles           ${name}.ttc

use_configure       no

checksums           rmd160  7fa42ad5316c338b7775e688c462946a4062fc9b \
                    sha256  85cc634fa228286ca307803bbb4ca61f61fa821b3ed573f4f07c6f0c064426b5 \
                    size    162590364

worksrcdir          .

extract.mkdir       no
extract.cmd         cp
extract.pre_args
extract.post_args   .

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 755 -d ${target}
    copy ${worksrcpath}/${distfiles} ${target}
}
