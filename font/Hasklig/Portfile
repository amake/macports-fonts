# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          font
github.setup        i-tu Hasklig 1.1
revision            0
github.tarball_from releases

description         A code font based on Source Code Pro with monospaced ligatures
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  0c50743ebd172b69db9a972c0db95c7ea08bf664 \
                    sha256  98eccec22bc0ae3838a099a911230f62197e681b6a6c30e5149c52f5fc6a95c3 \
                    size    1308041

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.otf] ${target}
}

# This regex is a dumb hack to exclude 1.017, which is lexicographically newer
# than 1.1 but is actually very old
github.livecheck.regex {([0-9]+\.[0-9]{1,2})}
