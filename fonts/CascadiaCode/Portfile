PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        microsoft cascadia-code 2110.31 v
name                CascadiaCode
revision            0
github.tarball_from releases

description         A fun, new monospaced font that includes programming ligatures
long_description    ${description}

platforms           darwin
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            ${name}-${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  060df4edbfcfaef568ce55566ddc34414b16674f \
                    sha256  b1a18b6b15818f5e5467f06363c963d7f373f26c41910284943076c064756fac \
                    size    24899672

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/otf/static/*] ${target}
}
