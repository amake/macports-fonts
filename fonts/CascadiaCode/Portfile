PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        microsoft cascadia-code 2007.01 v
name                CascadiaCode
revision            0
github.tarball_from releases

description         A fun, new monospaced font that includes programming ligatures
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

distname            ${name}-${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  37df4a28806510e20dc96db5d1a5cfbab6f27a75 \
                    sha256  9f066d0d9cb2669bea2e130d7add43d496bf24ef995f42dc603fc2014574a3a4 \
                    size    3478705

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/otf/*] ${target}
}
