license             OFL

distname            ${name}-${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  35a8ede7b584698c4088ad42b9e0f4380d47fe61 \
                    sha256  6c96e5ffab9dbe0802a232bf5cb3c8538ee22a10e70c7897a3b3924a4b1b2e36 \
                    size    8676365

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/otf/static/*] ${target}
}
