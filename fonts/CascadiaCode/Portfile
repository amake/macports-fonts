PortGroup           github 1.0

categories          fonts
github.setup        microsoft cascadia-code 2105.24 v
name                CascadiaCode
revision            0
github.tarball_from releases

description         A fun, new monospaced font that includes programming ligatures
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

distname            ${name}-${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  2e2d70590cfef1e76a21ab4e879f095bbcd827bb \
                    sha256  4edd89afd1009e1da121792c44bec6192001f3ffe2186a9e6f554c3bb8f5fb0b \
                    size    18708244

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/otf/static/*] ${target}
}
