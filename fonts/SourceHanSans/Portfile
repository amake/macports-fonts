PortSystem          1.0
PortGroup           github 1.0

categories          fonts
name                SourceHanSans
github.setup        adobe-fonts source-han-sans 2.003 "" R

description         A set of Pan-CJK sans-serif fonts
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

master_sites        https://github.com/adobe-fonts/source-han-sans/raw/release/SuperOTC/

use_zip             yes
distname            ${name}.ttc
dist_subdir         ${name}/${version}
worksrcdir          .

use_configure       no

checksums           rmd160  bd070780a00a0eec88a8928a7da468d12b8a2ce3 \
                    sha256  02947fcec1fbb97b3369dc30113c9f07363359aed82788bf38eef17b894bf045 \
                    size    98496834

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
