PortSystem          1.0
PortGroup           github 1.0

categories          fonts
name                SourceHanSans
github.setup        adobe-fonts source-han-sans 2.002 "" R

description         A set of Pan-CJK sans-serif fonts
long_description    ${description}
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

master_sites        https://github.com/adobe-fonts/source-han-sans/raw/release/SuperOTC/

use_zip             yes
distname            ${name}.ttc
dist_subdir         ${name}/${version}
worksrcdir          .

use_configure       no

checksums           rmd160  a6880c39f7f270eb4d263d9ad0debc155c8b2eb4 \
                    sha256  8f78220f16845de12e3bb0dc460c082ffcd3871e5f92cbb0934cdeccffb48dbb \
                    size    98520702

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
