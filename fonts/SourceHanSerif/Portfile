# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
name                SourceHanSerif
github.setup        adobe-fonts source-han-serif 2.001 "" R

description         A set of Pan-CJK serif fonts
long_description    ${description}
platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from releases
distname            01_${name}.ttc
dist_subdir         ${name}/${version}

use_zip             yes

use_configure       no
worksrcdir          .

checksums           rmd160  1027d7ee6143b7208e4417bde164a079f92ab387 \
                    sha256  50b76bb4f2edcec81f6441d692be1e6c2fc5491387056249543f8fcdd209e8e8 \
                    size    138022060

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
