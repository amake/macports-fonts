# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        rsms inter 3.15 v
name                Inter
revision            0

description         A typeface specially designed for user interfaces with focus \
                    on high legibility of small-to-medium sized text on computer \
                    screens.
long_description    ${description}

homepage            https://rsms.me/inter/

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             otf

github.tarball_from releases
distname            ${name}-${version}

use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  0d9ccd138133a38581635ca9b9fb014689b4670d \
                    sha256  1534288eb599f57acbf2c5ac0010da9495c2ee53116e08d799555c6f8ee22156 \
                    size    22090616

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob "${worksrcpath}/Inter Desktop/*.otf"] ${target}
}
