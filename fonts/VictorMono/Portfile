PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        rubjo victor-mono 1.5.3 v
name                VictorMono
revision            0

description         An open-source monospaced font with optional semi-connected \
                    cursive italics and programming symbol ligatures.
long_description    ${description}
homepage            https://rubjo.github.io/victor-mono/

platforms           darwin
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             MIT

master_sites        https://rubjo.github.io/victor-mono/
distname            ${name}All
dist_subdir         ${name}/${version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  06ef0f6150ea32df1becd7e4a76ea464511e0704 \
                    sha256  839aa255ca6554430b6be353338431485e9c1452545c278161cc108a7ee7b1ab \
                    size    8023339

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/OTF/*] ${target}
}
