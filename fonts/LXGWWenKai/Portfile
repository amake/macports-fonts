PortGroup           github 1.0

categories          fonts
github.setup        lxgw LxgwWenKai 1.521 v
name                LXGWWenKai
revision            0
github.tarball_from releases

description         An open-source Chinese font derived from Fontworks' Klee One.
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            lxgw-wenkai-v${version}
use_configure       no

checksums           rmd160  d360d4b5ece6b6f1b1339d2d45a9110f0295a309 \
                    sha256  e0658248c97e81dc6710f6bc24fcfb73e6d69b13fb1da6478fe0f4c940ea8157 \
                    size    81045476

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}

github.livecheck.regex  {([0-9.]+)}
