# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        googlefonts noto-emoji 2020-09-16-unicode13_1 v
name                NotoEmoji
revision            0

fetch.type          git

description         Black-and-white Noto emoji fonts
long_description    ${description}. Color version doesn't work on macOS. Also \
    included in NotoFonts port.

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             ofl

use_configure       no

build {}

destroot.violate_mtree yes

conflicts           NotoFonts

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/fonts/*.ttf] ${target}
}
