PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        jenskutilek sudo-font 0.70 v
name                SudoFont
revision            0

description         A monospaced font designed for terminal and programming
long_description    ${description}
homepage            https://www.kutilek.de/sudo-font/

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from releases

distname            sudo
dist_subdir         ${name}/${version}
use_configure       no
use_zip             yes

checksums           rmd160  74617227191445e0138bf328cd2b59ccbb3299dc \
                    sha256  833212b840baa51ee9c8492041b986602049d261a33e1f59ac104f65dc3e1409 \
                    size    3050949

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}
