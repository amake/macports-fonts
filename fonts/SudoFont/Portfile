PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        jenskutilek sudo-font 0.53.0 v
name                SudoFont
revision            0

description         A monospaced font designed for terminal and programming
long_description    ${description}
homepage            https://www.kutilek.de/sudo-font/
master_sites        https://www.kutilek.de/download/

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

distname            sudo
dist_subdir         ${name}/${version}
use_configure       no
use_zip             yes

checksums           rmd160  4f03378a4952e35a1994547b77b3e8b1ffc05fd4 \
                    sha256  db36df42bde50a4083c5c8f2da891eafa8b475a8a0ed4a0f904374b95c5b8d0e \
                    size    1764143

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}
