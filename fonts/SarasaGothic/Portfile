distname            [string tolower ${github.project}]-ttc-${github.version}
use_configure       no
use_7z              yes
worksrcdir          .

checksums           rmd160  688ae2d4bcc335d315144a3379f3fa6f9e972860 \
                    sha256  6938707af097f5bf899f570c886063860973193db9524468da0c27af4a36ce94 \
                    size    125218779

