PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        be5invis Sarasa-Gothic 1.0.14 v
name                SarasaGothic
revision            0
github.tarball_from releases

description         A CJK programming font based on Iosevka and Source Han Sans
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            Sarasa-SuperTTC-${github.version}
use_configure       no
use_zip             yes
worksrcdir          .

checksums           rmd160  5312b3485968f05f3cf03238a084b44e7908e546 \
                    sha256  2c4b8abcb4ea49b3eb9da670178e805a509f727ed4942726a58db1b34cd96b07 \
                    size    403948049

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}

github.livecheck.regex  {([^"-]+)}
