distname            [string tolower ${github.project}]-ttc-${github.version}
use_configure       no
use_7z              yes
worksrcdir          .

checksums           rmd160  6873930cd061e007f4b27d8c4024d6eb88aee861 \
                    sha256  5e79d01c3e015101eb941dc899ce0b581f7f7cb05a8660409f59a5a1c8f53c89 \
                    size    131413069

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
