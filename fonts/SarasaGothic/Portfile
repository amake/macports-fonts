PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        be5invis Sarasa-Gothic 0.18.5 v
name                SarasaGothic
revision            0
github.tarball_from releases

description         A CJK programming font based on Iosevka and Source Han Sans
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

distname            [string tolower ${github.project}]-ttc-${github.version}
use_configure       no
use_7z              yes
worksrcdir          .

checksums           rmd160  cf20a6d11ad0967eb00b1c2375ce2e484766cd59 \
                    sha256  a114a3241e4ccfd5608f772093ed0c17d25218cd04344b15d5f48159d4baa7fb \
                    size    124622021

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
