distname            [string tolower ${github.project}]-ttc-${github.version}
use_configure       no
use_7z              yes
worksrcdir          .

checksums           rmd160  241501e3af760d9125405d3630c5510d7359d907 \
                    sha256  893dcad279711cc541a143f4ba2356ee1b8e3ff4ed203a2da00601879adda913 \
                    size    125522740

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttc] ${target}
}
