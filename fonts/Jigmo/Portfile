# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

categories          fonts
name                Jigmo
version             20250912
description         Free Kanji font including over 80,000 Unicode characters
long_description    ${description}. Successor to Hanazono.
platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

homepage            https://kamichikoichi.github.io/jigmo/
master_sites        ${homepage}

use_configure       no
use_zip             yes

checksums           rmd160  916b492369f718b3a0a90c36c53b7918217d82ed \
                    sha256  5744c7386d129475d87607ca66d043c8793c65448adeaedc921b6931890e5d0b \
                    size    35559738

worksrcdir          .

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}

livecheck.type      regex
livecheck.regex     ${name}-\(\[0-9\]+\)${extract.suffix}
