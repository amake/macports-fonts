PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        evilmartians mono 0.9.0 v
name                MartianMono
revision            0
github.tarball_from releases

description         Free and open-source monospaced font from Evil Martians
long_description    ${description}

platforms           darwin
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            martian-mono-${version}-otf
use_configure       no
use_zip             yes

worksrcdir          .

checksums           rmd160  cea0d9ac3f26b5a39cb5b4fcafafdad1c11e53fb \
                    sha256  2d7c4e9103b1df5551eb6d91f19122b80bb82e97aa77d7ddc65cb3edc95cd8d3 \
                    size    298180

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.otf] ${target}
}
