distname            source-sans-[string map {. v} ${version}]${github.tag_suffix}
worksrcdir          .
use_configure       no
use_zip             yes

checksums           rmd160  dd6123969d3265fa3a94b8cf2cc625fe9d555dd5 \
                    sha256  1186d594ecb1336679a1d102bb6ddbe6041f0fd029482e53f02e46aa3ab011cf \
                    size    10333042

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/OTF/*] ${target}
}

github.livecheck.regex     {([^"]+R)}
