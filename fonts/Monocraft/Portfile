PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        IdreesInc Monocraft 4.2.1 v
revision            0
github.tarball_from releases

description         A programming font based on the typeface used in Minecraft
long_description    ${description}
homepage            https://idreesinc.com/monocraft.html

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distfiles           ${name}.ttc
dist_subdir         ${name}/${version}

use_configure       no
worksrcdir          .

extract.only

checksums           rmd160  441ac8ff428c04f3be1b5d9bb2f1e75ac354e9c7 \
                    sha256  0ea1aea12f03d552a469fc017f19ea927b53bf9d21e60a41c5c476c3faf3c7f9 \
                    size    5909252

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}

github.livecheck.regex  {([0-9.]+)}
