PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        IdreesInc Monocraft 2.4 v
revision            0
github.tarball_from releases

description         A programming font based on the typeface used in Minecraft
long_description    ${description}
homepage            https://idreesinc.com/monocraft.html

platforms           darwin
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distfiles           ${name}.otf
dist_subdir         ${name}/${version}

use_configure       no
worksrcdir          .

extract.only

checksums           rmd160  a9bad1cc718e340a8b9bab87a67ba193fe1d053b \
                    sha256  3c0d56fa03944ad1b0edc0e6b446c6f81e8cfac018afc71fb7e0a4c63e4b7225 \
                    size    152224

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}
