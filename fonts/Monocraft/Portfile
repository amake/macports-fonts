PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        IdreesInc Monocraft 4.1 v
revision            0
github.tarball_from releases

description         A programming font based on the typeface used in Minecraft
long_description    ${description}
homepage            https://idreesinc.com/monocraft.html

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distfiles           ${name}.ttc
dist_subdir         ${name}/${version}

use_configure       no
worksrcdir          .

extract.only

checksums           rmd160  21287979d100fe6eb7037162d63a48a69b212728 \
                    sha256  09eb83095442e8068ec843f15ccb35717fa783616f0a6079605c4c4522920381 \
                    size    3353132

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}

github.livecheck.regex  {([0-9.]+)}
