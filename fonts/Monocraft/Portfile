PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        IdreesInc Monocraft 4.2 v
revision            0
github.tarball_from releases

description         A programming font based on the typeface used in Minecraft
long_description    ${description}
homepage            https://idreesinc.com/monocraft.html

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distfiles           ${name}.ttc
dist_subdir         ${name}/${version}

use_configure       no
worksrcdir          .

extract.only

checksums           rmd160  cb466dc543502cdd62d4feb8aa2c7be357879b2c \
                    sha256  a290e8205b3c3bbb88f628a1a0bec3b0cc4f656d7ef7c380301789cb33ea3d32 \
                    size    5909252

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}

github.livecheck.regex  {([0-9.]+)}
