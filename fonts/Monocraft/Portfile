PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        IdreesInc Monocraft 2.5 v
revision            0
github.tarball_from releases

description         A programming font based on the typeface used in Minecraft
long_description    ${description}
homepage            https://idreesinc.com/monocraft.html

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distfiles           ${name}.otf
dist_subdir         ${name}/${version}

use_configure       no
worksrcdir          .

extract.only

checksums           rmd160  f82c11c0fea14f59c9211f4bf537f94b2749d6e9 \
                    sha256  c4a52373da2d937cccf2d77b092ebafff86f970eb406a27960583c11ac345ea6 \
                    size    38704

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}
