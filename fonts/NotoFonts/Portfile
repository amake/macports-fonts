checksums           rmd160  cf29685026922eea64a1d950553e981373fd6035 \
                    sha256  8e98b99c953338666c3106632dd36008798f3f30ba542e66796d57b588c23c5e \
                    size    888253140

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/unhinted/otf/*/*.otf] ${target}
}
