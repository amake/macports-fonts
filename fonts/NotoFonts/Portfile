use_configure       no

checksums           rmd160  b8fd1738b5394c7cd11104afb9536e0f6821efef \
                    sha256  15100d877b36483da152d54d26c584501a6fa230e1ecf97b3b6eb968074219f2 \
                    size    887814630

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/unhinted/otf/*/*.otf] ${target}
}
