# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        unicode-org last-resort-font 17.000
name                LastResort
revision            0

description         A special-purpose font meant to serve as a fallback when other \
                    fonts don't have a glyph for a given character
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from releases

use_configure       no

checksums           rmd160  d7b762084429f6ba5db93e47fd9565cdd469e145 \
                    sha256  c25223fd85c6dbb4cc720a5ae77c15bc1b5317b4488e37ba648180cbe1682a5e \
                    size    9225000

subport ${name}HE {
    long_description \
        ${description}. The high-efficiency version is much smaller but \
        potentially less compatible, for instance with Windows or Adobe apps.

    checksums       rmd160  af634f0c94f5aad5ec5823bca61e1d91645a3b4f \
                    sha256  3a936fe2379e9e164a8f9819095cbf53d9305a2d08532d9be5b496f4be45bcde \
                    size    576156
}

distfiles           ${subport}-Regular.ttf
dist_subdir         ${subport}/${version}

extract.only

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}
