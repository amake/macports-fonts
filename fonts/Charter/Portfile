# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

categories          fonts
name                Charter
version             210114
description         A body text font that holds up well on low-resolution output devices
long_description \
    Designed by Matthew Carter in 1987, ${name} is a body text font that holds \
    up well on low-resolution output devices of the dayâ€”fax machines and 300 dpi \
    laser printers.
platforms           darwin
maintainers         {amake @amake} openmaintainer
license             Permissive
homepage            https://practicaltypography.com/charter.html
master_sites        https://practicaltypography.com/fonts/

distname            "${name}%20${version}"

use_configure       no
use_zip             yes
worksrcdir          "${name} ${version}"

checksums           rmd160  d02ebd58ef3e88ef963e8d696f2b165927fb53dc \
                    sha256  a487b6d0314d17d99590e2fab7d697e0c827b9289a99a9802fb3047e34ef05cd \
                    size    237622

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*/${name}/*.otf] ${target}
}

livecheck.type      regex
livecheck.regex     "${name} (\[0-9.\]+)${extract.suffix}"
