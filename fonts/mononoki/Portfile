PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        madmalik mononoki 1.2
revision            0
github.tarball_from releases

homepage            http://madmalik.github.io/mononoki/
description         A typeface by Matthias Tellen, created to enhance code formatting.
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             OFL

distname            ${name}
dist_subdir         ${name}/${version}

worksrcdir          .

checksums           rmd160  5e962ea07ffcd63cd1902daeb8efcb87b9506807 \
                    sha256  cf29ea7663dbfe94feaedaf5c0be4f4ae6a5b98c1293e0e772e69c28ac5dc658 \
                    size    656176

use_configure       no

use_zip             yes

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}
