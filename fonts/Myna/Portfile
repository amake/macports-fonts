PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        sayyadirfanali Myna 2.0.0 v
revision            0

description         Monospace typeface designed for symbol-rich programming
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from archive

checksums           rmd160  c609b6c4ecc956ba874a14da4b43a1949ed6dbc1 \
                    sha256  c51fdc87b435db743bb496016a39b76ea420a93ee0a6157eccf2d9c86e8761a8 \
                    size    6907016

use_configure       no

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/fonts/*.otf] ${target}
}
