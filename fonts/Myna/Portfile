PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        sayyadirfanali Myna 1.0.0 v
revision            0

description         Monospace typeface designed for symbol-rich programming
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from releases

dist_subdir         ${name}/${version}
distfiles           ${name}.otf

checksums           rmd160  1bb901a03142ae8e3e2e2ae14a435d0d371a7120 \
                    sha256  0f09d4353fcb45a5a29c28005f7c1334587da23005c056d611a8b1014d890530 \
                    size    190228

use_configure       no

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}
