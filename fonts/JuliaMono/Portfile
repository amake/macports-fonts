worksrcdir          .

use_configure       no

checksums           rmd160  9e87f96535b7cf47a85d3e7b7d6a77702cfcec73 \
                    sha256  0f8efde9061abf9849f53048ea577092480dd02a912c363e049d17a6e4529fa5 \
                    size    17369612

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.ttf] ${target}
}
