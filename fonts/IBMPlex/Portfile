if {${subport} ne ${name}} {
    github.tarball_from releases
    dist_subdir         ${subport}/${version}
    destroot.violate_mtree yes

    github.master_sites ${github.homepage}/releases/download/[string map {@ %40 / %2F} ${git.branch}]

    destroot {
        set target ${destroot}/Library/Fonts/
        xinstall -m 0755 -d ${target}
        foreach dir {otf otf/hinted complete/otf complete/otf/hinted} {
            set otf_glob ${workpath}/ibm-plex-*/fonts/${dir}/*.otf
            if {[llength [glob -nocomplain ${otf_glob}]] > 0} {
                copy {*}[glob ${otf_glob}] ${target}
            }
        }
    }
}
