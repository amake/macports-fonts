# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
name                IBMPlex

description         IBMâ€™s typeface, IBM Plex
long_description    ${description}
homepage            https://www.ibm.com/plex/

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer

use_configure       no
build {}

if {${subport} eq ${name}} {
    version             1
    revision            0
    epoch               2

    license         Permissive

    distfiles

    depends_lib \
        port:IBMPlex-Math \
        port:IBMPlex-Mono \
        port:IBMPlex-Sans \
        port:IBMPlex-Sans-Arabic \
        port:IBMPlex-Sans-Condensed \
        port:IBMPlex-Sans-Devanagari \
        port:IBMPlex-Sans-Hebrew \
        port:IBMPlex-Sans-JP \
        port:IBMPlex-Sans-KR \
        port:IBMPlex-Sans-TC \
        port:IBMPlex-Sans-SC \
        port:IBMPlex-Sans-Thai \
        port:IBMPlex-Sans-Thai-Looped \
        port:IBMPlex-Serif

    destroot {
        # Create a dummy file so the port can be successfully activated
        xinstall -d ${destroot}${prefix}/share/doc/${name}
        set docfile [open ${destroot}${prefix}/share/doc/${name}/README.${name}.txt "w"]
        puts $docfile "IBM Plex ${version} (MacPorts revision ${version}_${revision})\n"
        puts $docfile "${long_description}\n"
        close $docfile
    }
} else {
    license         OFL
    use_zip         yes
}

