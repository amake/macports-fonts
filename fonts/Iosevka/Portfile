# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        be5invis Iosevka 27.3.2 v
revision            0

description         Slender typeface for code, from code
long_description \
    ${name} is an open-source, sans-serif + slab-serif, monospace + \
    quasiâ€‘proportional typeface family, designed for writing code, using in \
    terminals, and preparing technical documents.
homepage            https://typeof.net/Iosevka/

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

set plan            iosevka-custom

patch {
    copy ${filespath}/private-build-plans.toml ${worksrcpath}
}

variant precompiled description {Use precompiled binaries} conflicts min_leading {
    global plan
    set plan        iosevka

    github.tarball_from releases

    distname        super-ttc-iosevka-${github.version}
    use_configure   no
    use_zip         yes
    worksrcdir      .

    checksums       rmd160  f1f25d69e598ef3721105d948d0ca5e606f50c00 \
                    sha256  fd0489fc36f8361a3a6f5510c4c6114377403d5137cf0a4f2a56e2d88639052e \
                    size    95664263

    build {}

    global workbinglob
    set workbinglob ${worksrcpath}/*.ttc
}

variant min_leading description {Build with minimal line height} conflicts precompiled {
    post-patch {
        reinplace "s|# leading = 1250|leading = 1110|" ${worksrcpath}/private-build-plans.toml
    }
}

variant ss08 description {Pragmata Pro Style} {
    if {[variant_isset precompiled]} {
        distname    super-ttc-iosevka-ss08-${github.version}

        checksums   rmd160  589321602418b078170c4f9465af052e7d621aa6 \
                    sha256  e7442480aecd9bd7d80f8ed9ef371f217452297bfb816b3b34d76eb63eb53253 \
                    size    20285430
    }

    post-patch {
        reinplace "s|# inherits = \"ss01\"|inherits = \"ss08\"|" ${worksrcpath}/private-build-plans.toml
    }
}

default_variants    +precompiled

if {![variant_isset precompiled]} {
    depends_build-append \
        bin:npm:npm8 \
        port:ttfautohint

    checksums       rmd160  4651820733a5de532504856f17e7ef169af7b1d7 \
                    sha256  b9bfe8af6e2bea2f06ba964922bf623b7e62409fae78c54643d07d5d412572dc \
                    size    10055904

    configure {
        system -W ${worksrcpath} "npm ci"
    }

    build {
        system -W ${worksrcpath} "TERM=dumb npm run build -- --verbosity=8 ttf::${plan}"
    }

    pre-destroot {
        # Do this late because otherwise we won't see the value overwritten by
        # variants, since this is in the "main" scope(?)
        global workbinglob
        set workbinglob ${worksrcpath}/dist/${plan}/ttf/*
    }
}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${workbinglob}] ${target}
}

github.livecheck.regex  {([^"-]+)}
