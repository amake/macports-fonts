PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        intel intel-one-mono 1.0.0 V
name                IntelOneMono
revision            0
github.tarball_from releases

description         An expressive monospaced font family from Intel
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            otf
dist_subdir         ${name}/${version}
use_configure       no
use_zip             yes

checksums           rmd160  98281c99e81e44ac8cd6524fe6054f4ddf6d7e4d \
                    sha256  471bcbb966625f8a238f0d638cbc9622ac16d513064a124196798f62bc4c81ac \
                    size    357385

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.otf] ${target}
}
