PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        intel intel-one-mono 1.2.0 V
name                IntelOneMono
revision            0
github.tarball_from releases

description         An expressive monospaced font family from Intel
long_description    ${description}

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

distname            otf
dist_subdir         ${name}/${version}
use_configure       no
use_zip             yes

checksums           rmd160  9781881ca90cbcad39686059ac19aa174c2e160c \
                    sha256  5675c8696efb7515ef5c1d55af4d714500cc10296dc3317f44ca868005a7bb93 \
                    size    354288

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/*.otf] ${target}
}
