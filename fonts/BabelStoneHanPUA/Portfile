PortSystem          1.0

categories          fonts
name                BabelStoneHanPUA
version             1.373
revision            0
epoch               1
description         A free CJK font containing 5,200+ unencoded Han characters in the Private Use Area
long_description    ${description}
platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             free

homepage            https://babelstone.co.uk/Fonts/PUA.html
master_sites        https://babelstone.co.uk/Fonts/Download/

distfiles           ${name}.ttf
dist_subdir         ${name}/${version}_${revision}_${epoch}

extract.only

use_configure       no

checksums           rmd160  42eae62000c73fa22d3fdea080b4327d0edc00c0 \
                    sha256  0c4874700e3cd9a242eda488703d5d83de896bd9ef62a777a45327a63adf9552 \
                    size    3997768

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${distpath}/${distfiles} ${target}
}

livecheck.type      regex
livecheck.regex     {>([0-9.]+) \(}
