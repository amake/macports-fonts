PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        aosp-mirror platform_frameworks_base 11.0.0_r11 android-
name                DroidSans
revision            0

description         A pan-Unicode font family created for use in Google's Android mobile OS
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             Apache-2

use_configure       no

checksums           rmd160  d5d08bc355a0a300eae22a5a92d3114b2ebb8f2a \
                    sha256  a9bf60ab748de76c45b809985981de756921e5285834443684c06e03934eb6cc \
                    size    817332611

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${worksrcpath}/data/fonts/DroidSansFallbackFull.ttf \
        ${worksrcpath}/data/fonts/DroidSansMono.ttf \
        ${target}
}
