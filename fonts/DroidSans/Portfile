PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        aosp-mirror platform_frameworks_base 11.0.0_r5 android-
name                DroidSans
revision            0

description         A pan-Unicode font family created for use in Google's Android mobile OS
long_description    ${description}

platforms           darwin
maintainers         {amake @amake} openmaintainer
license             Apache-2

use_configure       no

checksums           rmd160  ffe7c74c0a10e6da065c169b81c31a7f69eee358 \
                    sha256  cb4018145709259ea8a37dbba9938927f06f58fc2ea71167178ad4ae86334ef1 \
                    size    817139004

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy ${worksrcpath}/data/fonts/DroidSansFallbackFull.ttf \
        ${worksrcpath}/data/fonts/DroidSansMono.ttf \
        ${target}
}
