PortSystem          1.0
PortGroup           github 1.0

categories          fonts
github.setup        bBoxType FiraGO 5bbcb9d066ab563686ed1de1e6f62eec0148e82d
version             1.001
revision            0

homepage            https://carrois.com/fira/
description         Fira Sans, but with extensions for several languages
long_description    ${description} such as Arabic, Devanagari, Georgian, Hebrew and Thai

platforms           {darwin any}
supported_archs     noarch
maintainers         {amake @amake} openmaintainer
license             OFL

github.tarball_from archive

checksums           rmd160  a1b10af1b3d7e7f9bcf3d7c308a71b9dea352b2c \
                    sha256  f55e4fafad1242eab226596b349eeaa7b9a7a93890c5e3045e4aeb167de2a6b5 \
                    size    53410269

use_configure       no

build {}

destroot.violate_mtree yes

destroot {
    set target ${destroot}/Library/Fonts/
    xinstall -m 0755 -d ${target}
    copy {*}[glob ${worksrcpath}/Fonts/FiraGO_OTF_1001/*/*] ${target}
}
